<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical">

    <com.crystal.crystalrangeseekbar.widgets.BubbleThumbSeekbar
        android:id="@+id/seekbar_set_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_color="#a7a5a4"
        app:bar_highlight_color="#424242"
        app:corner_radius="10"
        android:layout_marginTop="6dp"
        app:data_type="_integer"
        app:left_thumb_color="#775E4F"
        app:left_thumb_color_pressed="#4C2D1A"
        app:max_value="120"
        app:min_value="0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/start"
            android:text="00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/end"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:text="120"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


    <Button
        android:id="@+id/ok"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="16dp"
        android:text="OK"
        android:textSize="20dp" />
</LinearLayout>