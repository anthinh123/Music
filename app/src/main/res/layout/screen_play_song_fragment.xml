<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/infor"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Se khong con nua"
            android:id="@+id/song"
            style="@style/TextViewPlaySong"
            android:layout_alignParentTop="true"
            android:textSize="16sp"
            />

        <TextView
            android:text="Tuan Hung"
            android:id="@+id/singer"
            style="@style/TextViewPlaySong"
            android:textSize="12sp"
            android:layout_below="@+id/song"
            />
        
        <ImageButton
            android:id="@+id/more"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/pause_play_mini"
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/image_album"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:layout_height="0dp">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_gravity="center"
            style="@style/button_playsong"
            android:src="@drawable/ic_skip_previous_white_24dp"
             />

        <ImageButton
            style="@style/button_playsong"
            android:layout_gravity="center"
            android:src="@drawable/ic_pause_circle_outline_white_24dp"
            />

        <ImageButton
            style="@style/button_playsong"
            android:layout_gravity="center"
            android:src="@drawable/ic_skip_next_white_24dp"
            />

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/pause_play_mini"
                android:src="@drawable/ic_repeat_white_24dp"
                />

            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/pause_play_mini"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/ic_shuffle_white_48dp"
                />

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextTimeStyle"
            android:id="@+id/time_start"
            android:layout_alignParentLeft="true"
            />

        <TextView
            style="@style/TextTimeStyle"
            android:id="@+id/time_end"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>




</LinearLayout>